<body>
<div class="frame" align="center">
	<h1>Параметры критерия</h1>

	<%= form_for @criterium, url: {action: "create"} do |form| %>

	<div class="name_crit" align="right">
		Наименование
	</div>

	<div class="name_field" align="left">
		<%= form.text_field :name %>
	</div>

	<div class="description_crit" align="right">
		Описание
	</div>

	<div class="descroption_area" align="left">
		<%= form.text_area :description, size: "45x6" %>
	</div>

	<div class="parent_crit" align="right">
		Родитель
	</div>

	<div class="parent_select" align="left">
		<%= form.collection_select(:criterium_id, Criterium.all, :id, :name) %>
	</div>

	<div class="scale">
		Шкала
	</div>

	<div class="scale_desc">
		Шкала не заполнена
	</div>

	<div class="ismin_crit" align="right">
		Наравление улучшений
	</div>

	<div class="ismin_select" align="left">
		<%= form.select(:ismin, [['Чем больше, тем лучше', 1],['Чем меньше, тем лучше', 2],['Идельное значение', 3]]) %>

        <!--
		<% if @criterium.ismin === 3 %>
		<%= form.text_field :idealvalue, :readonly => false %>
        <% else %>
        <%= form.text_field :idealvalue, :readonly => true %>
        <% end %>
        -->
	</div>

	<div class="numeric_crit" align="right">
		Числовой показатель
	</div>

	<div class="numeric_checkbox" align="left">
		
	</div>

	<div class="ord_crit" align="right">
		Порядковый номер
	</div>

	<div class="ord_field" align="left">
		<%= form.text_field :ord %>
	</div>


	<%= form.submit('Добавить') %>


	<% end %>

	<%= link_to 'Отмена', criteria_path %>


